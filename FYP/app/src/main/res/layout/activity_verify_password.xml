<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".Verify_Password">


    <ImageButton
        android:id="@+id/back_arrow"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:src="@drawable/back_arrow_ic"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back Arrow"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Verification"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/blue"/>


    <TextView
        android:id="@+id/verification_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Enter Verification Code"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/blue"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">


        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:inputType="number"
            android:text="3"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/circle_edittext_background"/>


        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="7"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"
            android:textSize="18sp"
            android:background="@drawable/circle_edittext_background"/>


        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"
            android:textSize="18sp"
            android:background="@drawable/circle_edittext_background"/>


        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="9"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:inputType="number"
            android:textSize="18sp"
            android:background="@drawable/circle_edittext_background"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="If you didnâ€™t receive a code, "
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/resend_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/blue" />


    <Button
        android:id="@+id/send_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Send"
        android:textSize="18sp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        android:padding="12dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="or"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/fb_ic"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/google_icon"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/apple_ic"/>
    </LinearLayout>

</LinearLayout>
