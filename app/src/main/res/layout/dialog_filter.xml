<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        android:textSize="28sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <!-- Category Icons Row -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Each category icon with label -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/circle_blue"
                    android:src="@drawable/filter_sports"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:padding="8dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/reg"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/rounded_background"
                    android:src="@drawable/music_ic"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:padding="8dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/reg"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/circle_blue"
                    android:src="@drawable/art_ic"
                    android:layout_gravity="center"
                    android:padding="8dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Arts"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/reg"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <ImageView
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:background="@drawable/rounded_background"
                    android:src="@drawable/food_ic"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:padding="8dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/reg"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>

    <!-- Time & Date Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time &amp; Date"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:fontFamily="@font/reg"
            android:text="Today" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/reg"
            android:text="Tomorrow"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:fontFamily="@font/reg"
            android:text="This week" />
    </RadioGroup>

    <!-- Calendar Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/calendarOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_calender"
            android:backgroundTint="@color/black" />

        <TextView
            android:id="@+id/calendarTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose from calendar"
            android:textSize="18sp"
            android:fontFamily="@font/reg"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Location Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="@color/black"
        android:fontFamily="@font/bold"
        android:textSize="16sp"
        android:layout_marginTop="26dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location_ic"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/black" />

    </LinearLayout>

    <!-- Reset and Apply Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/reg"
            android:text="Reset"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/white"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/applyButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/reg"
            android:text="Apply"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>

