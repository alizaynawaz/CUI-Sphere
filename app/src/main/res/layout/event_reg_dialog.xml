<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners_bg"
    android:padding="16dp">

    <!-- Top Horizontal Bar with Back Arrow and Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back_arrow_ic"
            android:layout_marginEnd="16dp"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Event Registration"
            android:textSize="20sp"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/societyIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/literary_society"
            android:contentDescription="Society Icon" />
    </LinearLayout>

    <!-- Input Fields in a Frame -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frame_background"
        android:padding="16dp"
        android:layout_marginTop="16dp">

        <!-- Event Name EditText -->
        <EditText
            android:id="@+id/eventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:hint="Event Name"
            android:background="@android:color/transparent"
            android:fontFamily="@font/reg"
            android:inputType="text" />

        <!-- Participant Name EditText -->
        <EditText
            android:id="@+id/participantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:hint="Participant Name"
            android:background="@android:color/transparent"
            android:fontFamily="@font/reg"
            android:inputType="text"
            android:layout_marginTop="8dp" />

        <!-- Phone Number EditText -->
        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:hint="Phone Number"
            android:background="@android:color/transparent"
            android:fontFamily="@font/reg"
            android:inputType="phone"
            android:layout_marginTop="8dp" />

        <!-- Department EditText -->
        <EditText
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:hint="Department"
            android:background="@android:color/transparent"
            android:fontFamily="@font/reg"
            android:inputType="text"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="18sp"
            android:fontFamily="@font/reg"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:layout_marginEnd="16dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="18sp"
            android:fontFamily="@font/reg"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>


